<p id="notice"><%= notice %></p>
<div class="child row">
  <div class="wrapper col-md-6 col-md-offset-3 col-sm-10 col-sm-offset-1">
    <div class="picture-text">
      <p class="left"><strong>タイトル</strong></p>
      <p class="left"><%= @picture.title %></p>
      <p class="left"><strong>内容</strong></p>
      <p class="left"><%= @picture.content %></p>
      <p class="right">
        <strong>作成時間:</strong>
        <%= @picture.created_at.strftime("%y/%m/%d %p %l:%M") %>
      </p>
    </div>
    <p>コメント一覧</p>
    <div id="comments_area">
      <%= render partial: 'comments/index', locals: { comments: @comments, picture: @picture } %>
    </div>
    <%= render partial: 'comments/form', locals: { comment: @comment, picture: @picture } %>
    <% if current_user.id == @picture.user_id %>
      <%= link_to '編集', edit_picture_path(@picture) %> |
    <% end %>
    <%= link_to '戻る', pictures_path %>
  </div>
</div>
